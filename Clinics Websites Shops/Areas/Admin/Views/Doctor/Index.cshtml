@model List<DoctorListViewModel>
@using Microsoft.Extensions.Localization
@using Clinics_Websites_Shops.Areas.Admin.ViewModel
@inject IStringLocalizer<Clinics_Websites_Shops.Areas.Admin.Controllers.DoctorController> localizer

@{
    ViewData["Title"] = localizer["doctorsList"];
}

<div class="container">
    <partial name="_BreadcrumbAdmin" />
    
    <div class="row my-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-user-md"></i> @localizer["doctorsList"]
                    </h5>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> @localizer["addDoctor"]
                    </a>
                </div>
                
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">@localizer["noDoctorsFound"]</h5>
                            <p class="text-muted">@localizer["addFirstDoctor"]</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> @localizer["addDoctor"]
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@localizer["profileImage"]</th>
                                        <th>@localizer["doctorId"]</th>
                                        <th>@localizer["name"]</th>
                                        <th>@localizer["email"]</th>
                                        <th>@localizer["licenseNumber"]</th>
                                        <th>@localizer["degree"]</th>
                                        <th>@localizer["department"]</th>
                                        <th>@localizer["rank"]</th>
                                        <th>@localizer["experience"]</th>
                                        <th>@localizer["status"]</th>
                                        <th>@localizer["joinedDate"]</th>
                                        <th>@localizer["actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doctor in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(doctor.ProfileImageUrl))
                                                {
                                                    <img src="@doctor.ProfileImageUrl" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@doctor.DoctorId</strong>
                                            </td>
                                            <td>@doctor.ApplicationUserName</td>
                                            <td>@doctor.ApplicationUserEmail</td>
                                            <td>
                                                <span class="badge bg-info">@doctor.LicenseNumber</span>
                                            </td>
                                            <td>@doctor.MedicalDegree</td>
                                            <td>
                                                <small class="text-muted">@doctor.DepartmentName</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@doctor.Rank</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@doctor.YearsOfExperience @localizer["years"]</span>
                                            </td>
                                            <td>
                                                @if (doctor.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> @localizer["active"]
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times"></i> @localizer["inactive"]
                                                    </span>
                                                }
                                                <br>
                                                <small class="text-muted">@doctor.EmploymentStatus</small>
                                            </td>
                                            <td>
                                                <small>@doctor.JoinedDate.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-primary" title="@localizer["edit"]">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-danger" 
                                                       onclick="return confirm('@localizer["confirmDeleteDoctor"]')" title="@localizer["delete"]">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add some interactivity
        $(document).ready(function() {
            // Initialize DataTable if needed
            if ($('.table').length > 0 && @Model.Count > 10) {
                $('.table').DataTable({
                    "pageLength": 25,
                    "responsive": true,
                    "order": [[10, "desc"]], // Sort by joined date descending
                    "columnDefs": [
                        { "orderable": false, "targets": [0, 11] } // Disable sorting for image and actions columns
                    ]
                });
            }
        });
    </script>
}