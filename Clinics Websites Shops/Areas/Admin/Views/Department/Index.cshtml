@model List<DepartmentListViewModel>
@using Microsoft.Extensions.Localization
@using Clinics_Websites_Shops.Areas.Admin.ViewModel
@inject IStringLocalizer<Clinics_Websites_Shops.Areas.Admin.Controllers.DepartmentController> localizer

@{
    ViewData["Title"] = localizer["departments"];
}

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">@localizer["departments"]</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Department/Create" class="btn btn-success">
                <i class="fas fa-plus"></i> @localizer["create"] @localizer["department"]
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">@localizer["name"]</th>
                        <th scope="col">@localizer["description"]</th>
                        <th scope="col">@localizer["status"]</th>
                        <th scope="col">@localizer["doctors"]</th>
                        <th scope="col">@localizer["actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.MainImg))
                                    {
                                        <img src="@item.MainImg" alt="@item.Name" 
                                             class="img-circle elevation-2 me-2" width="40" height="40">
                                    }
                                    <div>
                                        <strong>@item.Name</strong>
                                        @* Show available languages indicator *@
                                        @if (item.OriginalDepartment.Translations.Any())
                                        {
                                            <div class="small text-muted">
                                                <i class="fas fa-language"></i> 
                                                @string.Join(", ", item.OriginalDepartment.Translations.Select(t => t.LanguageCode.ToUpper()))
                                            </div>
                                        }
                                    </div>
                                </div>
                            </td>
                            @if (item.Description is not null && item.Description.Length > 50)
                            {
                                <td title="@item.Description">@item.Description.Substring(0, 50)...</td>
                            }
                            else
                            {
                                <td>@item.Description</td>
                            }
                            @if(item.Status)
                            {
                                <td><span class="badge text-bg-success">@localizer["active"]</span></td>
                            }
                            else
                            {
                                <td><span class="badge text-bg-danger">@localizer["inactive"]</span></td>
                            }
                            <td>
                                <span class="badge text-bg-info">@item.DoctorsCount</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Admin/Department/Edit/@item.Id" 
                                       class="btn btn-warning btn-sm" 
                                       title="@localizer["edit"]">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/Admin/Department/Delete/@item.Id"
                                       class="btn btn-danger btn-sm btn-delete"
                                       data-id="@item.Id"
                                       title="@localizer["delete"]">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".btn-delete").forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault(); // Stop normal navigation
                const id = this.getAttribute("data-id");
                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Option 1: Redirect to delete action
                        window.location.href = url;

                        // Option 2: Use fetch/ajax to call delete API then refresh table
                        /*
                        fetch(url, { method: 'POST' })
                            .then(res => res.json())
                            .then(data => {
                                Swal.fire("Deleted!", "Department has been deleted.", "success")
                                    .then(() => location.reload());
                            });
                        */
                    }
                });
            });
        });
    });
</script>

