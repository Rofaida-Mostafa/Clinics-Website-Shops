@model List<AppointmentListViewModel>
@using Microsoft.Extensions.Localization
@using Clinics_Websites_Shops.Areas.Admin.ViewModel
@using Clinics_Websites_Shops.Extensions
@inject IStringLocalizer<Clinics_Websites_Shops.Areas.Admin.Controllers.AppointmentController> localizer

@{
    ViewData["Title"] = localizer["appointments"];
}

<div class="container-fluid">
    <partial name="_BreadcrumbAdmin" />

    <div class="row my-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-check"></i> @localizer["appointments"]
                    </h5>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> @localizer["addAppointment"]
                    </a>
                </div>

                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">@localizer["noAppointmentsFound"]</h5>
                            <p class="text-muted">@localizer["addFirstAppointment"]</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> @localizer["addAppointment"]
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table id="appointmentsTable" class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@localizer["appointmentNumber"]</th>
                                        <th>@localizer["appointmentDate"] & @localizer["appointmentTime"]</th>
                                        <th>@localizer["patient"]</th>
                                        <th>@localizer["doctor"]</th>
                                        <th>@localizer["department"]</th>
                                        <th>@localizer["appointmentType"]</th>
                                        <th>@localizer["durationMinutes"]</th>
                                        <th>Priority</th>
                                        <th>@localizer["status"]</th>
                                        <th>Fee</th>
                                        <th>@localizer["paymentStatus"]</th>
                                        <th>@localizer["actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@appointment.AppointmentNumber</strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <i class="fas fa-calendar"></i> @appointment.AppointmentDate.ToString("MMM dd, yyyy")
                                                </div>
                                                <div class="text-muted small">
                                                    <i class="fas fa-clock"></i> @appointment.AppointmentTime.ToString(@"hh\:mm")
                                                </div>
                                            </td>
                                            <td>
                                                <div>@appointment.PatientName</div>
                                                <div class="text-muted small">
                                                    <i class="fas fa-id-card"></i> @appointment.PatientId
                                                </div>
                                                @if (!string.IsNullOrEmpty(appointment.PatientPhone))
                                                {
                                                    <div class="text-muted small">
                                                        <i class="fas fa-phone"></i> @appointment.PatientPhone
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <div>@appointment.DoctorName</div>
                                                <div class="text-muted small">
                                                    <i class="fas fa-user-md"></i> @appointment.DoctorId
                                                </div>
                                                @if (!string.IsNullOrEmpty(appointment.DoctorSpecialization))
                                                {
                                                    <div class="text-muted small">
                                                        @appointment.DoctorSpecialization
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.DepartmentName))
                                                {
                                                    <span class="badge bg-secondary">@appointment.DepartmentName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@appointment.AppointmentType</span>
                                            </td>
                                            <td>
                                                @appointment.DurationMinutes min
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.Priority))
                                                {
                                                    <span class="badge @appointment.GetPriorityBadgeClass()">
                                                        @appointment.Priority
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @appointment.GetStatusBadgeClass()">
                                                    @appointment.Status
                                                </span>
                                                @if (appointment.IsConfirmed)
                                                {
                                                    <br/><small class="text-success"><i class="fas fa-check-circle"></i> @localizer["confirmAppointment"]</small>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.ConsultationFee.HasValue)
                                                {
                                                    <span>@appointment.ConsultationFee.Value.ToString("C")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.IsPaid)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Paid
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-clock"></i> Pending
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@appointment.Id"
                                                       class="btn btn-sm btn-info" title="@localizer["appointmentDetails"]">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@appointment.Id"
                                                       class="btn btn-sm btn-warning" title="@localizer["edit"]">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (!appointment.IsConfirmed && appointment.Status == "Scheduled")
                                                    {
                                                        <form asp-action="Confirm" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-success" title="@localizer["confirmAppointment"]"
                                                                    onclick="return confirm('@localizer["confirmAppointmentSuccess"]?')">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    @if (appointment.Status != "Cancelled" && appointment.Status != "Completed")
                                                    {
                                                        <button type="button" class="btn btn-sm btn-secondary" title="@localizer["cancelAppointment"]"
                                                                data-bs-toggle="modal" data-bs-target="#cancelModal@(appointment.Id)">
                                                            <i class="fas fa-ban"></i>
                                                        </button>
                                                    }
                                                    <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger" title="@localizer["delete"]"
                                                                onclick="return confirm('@localizer["confirmDeleteAppointment"]')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>

                                                <!-- Cancel Modal -->
                                                <div class="modal fade" id="cancelModal@(appointment.Id)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <form asp-action="Cancel" asp-route-id="@appointment.Id" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">@localizer["cancelAppointment"]</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label class="form-label">@localizer["cancellationReason"]</label>
                                                                        <textarea name="cancellationReason" class="form-control" rows="3" required></textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizer["cancel"]</button>
                                                                    <button type="submit" class="btn btn-danger">@localizer["cancelAppointment"]</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#appointmentsTable').DataTable({
                "order": [[1, "desc"]],
                "pageLength": 25,
                "responsive": true
            });
        });
    </script>
}

