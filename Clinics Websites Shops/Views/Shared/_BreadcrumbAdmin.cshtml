@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Clinics_Websites_Shops.Areas.Admin.Controllers.HomeController> localizer

<!-- Title and Top Buttons Start -->
<div class="page-title-container">
    <div class="row">
        <!-- Title Start -->
        <div class="col-12 col-md-7">
            <span class="align-middle text-muted d-inline-block lh-1 pb-2 pt-2 text-small">@localizer["welcome"]</span>
            <h1 class="mb-0 pb-0 display-4" id="title">@ViewData["title"]</h1>
        </div>
        <!-- Title End -->
    </div>
</div>
<!-- Title and Top Buttons End -->