# Application Configuration
APP_NAME="Clinics Website Shops"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
# Supported drivers: sqlserver, mysql
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=1433
DB_DATABASE=ClinicsWebsiteShops
DB_USERNAME=
DB_PASSWORD=

# Master Database Configuration (for multi-tenant support)
# If not specified, will use the same values as main database
MASTER_DB_HOST=localhost
MASTER_DB_PORT=1433
MASTER_DB_DATABASE=MasterDb
MASTER_DB_USERNAME=
MASTER_DB_PASSWORD=

# MySQL Configuration Example (uncomment and modify if using MySQL)
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=clinics_website_shops
# DB_USERNAME=root
# DB_PASSWORD=

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar

# Security
JWT_SECRET=your-super-secret-jwt-key-here

# File Storage
UPLOAD_PATH=wwwroot/uploads
MAX_FILE_SIZE=10485760

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@clinics.com
MAIL_FROM_NAME="${APP_NAME}"